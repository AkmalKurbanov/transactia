extends ../layouts/base

block content
  .container
    .profile
      .profile__column
        .profile__avatar
          +imgFixed("avatar", 80, 80, "images/static") 
        .profile__id Telegram ID
        .profile__email test@trusypay.org
        .profile__nav
          ul 
            li.active
              a(href="#") 
                svg(xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 24 24")
                  path(d="M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20ZM6.82 18.68a6.15 6.15 0 0 1 10.36 0 8.45 8.45 0 0 1-10.36 0Zm2.1-7.45a3.08 3.08 0 1 1 6.16 0 3.08 3.08 0 0 1-6.16 0Zm9.4 6.39a7.66 7.66 0 0 0-3.46-2.77 4.62 4.62 0 1 0-5.72 0 7.66 7.66 0 0 0-3.46 2.77 8.46 8.46 0 1 1 12.64 0Z")

                span Профиль
            li
              a(href="#") 
                svg(xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 24 24")
                  path(d="M11.25 20.25a.75.75 0 0 1-.75.75h-6a.75.75 0 0 1-.75-.75V3.75A.75.75 0 0 1 4.5 3h6a.75.75 0 1 1 0 1.5H5.25v15h5.25a.75.75 0 0 1 .75.75Zm10.28-8.78-3.75-3.75a.75.75 0 1 0-1.06 1.06l2.47 2.47H10.5a.75.75 0 1 0 0 1.5h8.69l-2.47 2.47a.75.75 0 1 0 1.06 1.06l3.75-3.75a.75.75 0 0 0 0-1.06Z")

                span Выйти

      .profile__column


        h1.title.title--h3 Профиль
        form
          .profile__form
            .profile__form-input
              .input
                .input__field
                  label(for="name") Имя *
                  input(type="text" id="name" name="name" value="Имя") 
            .profile__form-input
              .input
                .input__field
                  label(for="surname") Фамилия *
                  input(type="text" id="surname" name="surname" value="Фамилиия") 
            .profile__form-input
              .input
                .input__field
                  label(for="idname") Отображаемое имя *
                  input(type="text" id="idname" name="idname" value="Telegram ID")

                .message Так будет отображаться в разделе аккаунт и при публикации отзывов

            .profile__form-input
              .input
                .input__field
                  label(for="phone") Телефон *
                  input(type="tel" id="phone" name="phone") 
          button.btn Сохранить изменения

    