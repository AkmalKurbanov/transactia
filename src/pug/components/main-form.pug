              .input.input--with-select
                .input__field
                  div
                    label(for="sending") Получатель получит
                    input(type="text" id="sending" name="sending") 
                  +currencySelect("./images/currencies/flags/de.svg", "EUR", src="./js/entities.json", false)
          
          .tabs__panel(data-name="tab2")
            .currency-transfer
              .input.input--with-select
                .input__field
                  div
                    label(for="sending") Вы отправляете
                    input(type="text" id="sending" name="sending")

                  +currencySelect("./images/currencies/flags/ru.svg", "RUB", "", true)

              .currency-transfer__icon
                svg(xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 24 24")
                  path(fill="#fff", d="M11.03 15.97a.75.75 0 0 1 0 1.06l-3 3a.75.75 0 0 1-1.06 0l-3-3a.75.75 0 0 1 1.06-1.06l1.72 1.72V4.5a.75.75 0 1 1 1.5 0v13.19l1.72-1.72a.75.75 0 0 1 1.06 0Zm9-9-3-3a.75.75 0 0 0-1.06 0l-3 3a.75.75 0 0 0 1.06 1.06l1.72-1.72V19.5a.75.75 0 1 0 1.5 0V6.31l1.72 1.72a.75.75 0 1 0 1.06-1.06Z")

              .input.input--with-select
                .input__field
                  div
                    label(for="sending") Получатель получит
                    input(type="text" id="sending" name="sending") 
                  +currencySelect("./images/currencies/crypto/ustd.svg", "USDT", src="./js/crypto.json", false)

      .receipt__list 
        .receipt__list-item
          span Комиссия:
          span 0%
        
        .receipt__list-item
          span Курс:
          span 101,00 RUB = 1 EUR
          
        .receipt__list-item
          span Скорость доставки:
          span Несколько минут

      .centered
        button.btn Перевести 10 100 RUB

