- 
  const paySystems2 = [
    { img: 'sbp', title: 'СБП', desc: 'Деньги зачисляются напрямую на СБП' },
    { img: 'bank', title: 'На банковский счет', desc: 'Деньги сразу доступны для онлайн-покупок и переводов.' },
    { img: 'cash', title: 'Наличные (Скоро)', desc: 'Получение средств в партнёрских пунктах выдачи.', disabled: true },
    
    ]


each item in paySystems2
  .pay-system(class=item.disabled ? 'disabled' : '')
    .pay-system__icon
      +imgFixed(item.img, 48, 48, "images/pay-systems")
    
    .pay-system__content
      .pay-system__title= item.title
      .pay-system__desc= item.desc
