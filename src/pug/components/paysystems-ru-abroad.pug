- 
  const paySystems = [
    { img: 'card', title: 'На банковскую карту', desc: 'Зачисления напрямую на карту Visa или Mastercard.' },
    { img: 'wise', title: 'Wise', desc: 'Международный перевод напрямую на счёт получателя в Wise. ' },
    { img: 'revolut', title: 'Revolut', desc: 'Перевод на банк Revolut. Средства доступны сразу и готовы к использованию.' },
    { img: 'paypal', title: 'PayPal', desc: 'Получатель может сразу оплачивать товары, услуги или отправлять средства другим пользователям.' },
    { img: 'sepa', title: 'На банковский счёт (SEPA)', desc: 'Перевод на счёт в банке Европы по системе SEPA.' },
    { img: 'cash', title: 'Наличные (Скоро)', desc: 'Получение средств в партнёрских пунктах выдачи.', disabled: true }  ]


each item in paySystems
  .pay-system(class=item.disabled ? 'disabled' : '')
    .pay-system__icon
      +imgFixed(item.img, 48, 48, "images/pay-systems")

    .pay-system__content
      .pay-system__title= item.title
      .pay-system__desc= item.desc
