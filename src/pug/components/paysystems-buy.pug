- 
  const paySystems3 = [
    { img: 'TRON-(TRC-20)', title: 'TRON (TRC-20)', desc: 'Быстрое и выгодное пополнение — минимальные комиссии, мгновенное зачисление.' },
    { img: 'Ethereum-(ERC-20)', title: 'Ethereum (ERC-20)', desc: 'Классическая сеть — максимальная стабильность и совместимость с любыми кошельками.' },
    { img: 'Binance-(BEP-20)', title: 'Binance Smart Chain (BEP-20) ', desc: 'Удобная и экономичная сеть — выгодная комиссия и высокая скорость обработки.' }
    ]


each item in paySystems3
  .pay-system(class=item.disabled ? 'disabled' : '')
    .pay-system__icon
      +imgFixed(item.img, 48, 48, "images/pay-systems")

    .pay-system__content
      .pay-system__title= item.title
      .pay-system__desc= item.desc
